script/source = "extends Area2D

enum  DraggableType {ICON, TEXT}

export(DraggableType) var type
export(String, FILE, \"*.png\") var icon_path
export(String) var label_text

func _ready():
	determime_type()
		
func determime_type():
	if type == DraggableType.ICON:
		$Sprite.visible = true
		$Label.visible = false
		if icon_path != null:
			$Sprite.texture = load(icon_path)
	else:
		$Sprite.visible = false
		$Label.visible = true
		if icon_path != null:
			$Label.text = label_text
"

